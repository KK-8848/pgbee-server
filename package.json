{
  "name": "PgBee",
  "version": "1.0.0",
  "description": "",
  "main": "index.js",
  "type": "module",
  "scripts": {
    "dev": "concurrently \"pnpm dev:server\" \"pnpm dev:client\"",
    "dev:server": "pnpm --filter server dev",
    "dev:client": "pnpm --filter client dev",
    "dev:all": "concurrently \"pnpm dev:server\" \"pnpm dev:client\"",
    "build:all": "pnpm build:shared && pnpm build:server && pnpm build:client",
    "build:server": "pnpm --filter server build",
    "build:client": "pnpm --filter client build",
    "lint": "concurrently \"pnpm lint:server\" \"pnpm lint:client\" ",
    "lint:server": "pnpm --filter server lint",
    "lint:client": "pnpm --filter client lint",
    "lint:fix": "concurrently \"pnpm lint:fix:server\" \"pnpm lint:fix:client\" ",
    "lint:fix:server": "pnpm --filter server lint:fix",
    "lint:fix:client": "pnpm --filter client lint:fix",
    "test": "concurrently \"pnpm test:server\" \"pnpm test:client\"",
    "test:server": "pnpm --filter server test",
    "test:client": "pnpm --filter client test",
    "prepare": "husky"
  },
  "lint-staged": {
    "server/**/*.{js,ts}": [
      "eslint . --fix",
      "prettier --write"
    ],
    "client/**/*.{js,jsx,ts,tsx}": [
      "eslint . --fix",
      "prettier --write"
    ],
    "**/*.{json,md,yaml,yml}": [
      "prettier --write"
    ]
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "packageManager": "pnpm@10.11.1",
  "devDependencies": {
    "@eslint/js": "^9.31.0",
    "@typescript-eslint/eslint-plugin": "^8.37.0",
    "@typescript-eslint/parser": "^8.11.0",
    "concurrently": "^9.2.0",
    "eslint": "^9.31.0",
    "eslint-plugin-react": "^7.37.5",
    "eslint-plugin-react-hooks": "^5.2.0",
    "husky": "^9.1.7",
    "lint-staged": "^16.1.2",
    "prettier": "^3.6.2",
    "typescript-eslint": "^8.11.0"
  },
  "dependencies": {
    "globals": "^16.3.0"
  }
}
